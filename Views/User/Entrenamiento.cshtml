@model Salud_Vida_2.Models.RegistroActividadModel   

@{
    ViewBag.Title = "Inicio de Entrenamiento";
    Layout = "~/Views/Shared/_Layout_Usuario.cshtml"; // Ajusta la ruta según la ubicación de tu archivo de diseño compartido
}

<h2>Inicio de Entrenamiento</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("Entrenamiento", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.PesoInicial, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">

                        @Html.EditorFor(model => model.PesoInicial, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", step = "0.01", required = "required"}})
                        <div class="input-group-prepend">
                            <span class="input-group-text">kg</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Iniciar entrenamiento</button>
                </div>
            }
        </div>
    </div>
</div>
