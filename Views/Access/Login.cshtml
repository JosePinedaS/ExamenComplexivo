@model Salud_Vida_2.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-title {
        color: rgb(0, 0, 0); /* Texto en blanco */
        padding: 10px 20px; /* Espacio alrededor del texto */
        border-radius: 5px; /* Bordes redondeados */
    }

    .login-form {
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); /* Sombreado */
        padding: 20px; /* Espacio interno */
        border-radius: 10px; /* Bordes redondeados */
    }
</style>

<div class="login-container">
    <h2 class="login-title text-center mb-4">Login</h2>

    @Html.ValidationSummary(true, "Por favor corrija los siguientes errores.")
    @if (ViewBag.Error != null)
    {
        <div id="errorMessage" class="alert alert-danger mt-4">@ViewBag.Error</div>
    }

    <script>
        // Función para ocultar el mensaje de error después de 3 segundos
        setTimeout(function () {
            var errorMessage = document.getElementById('errorMessage');
            if (errorMessage) {
                errorMessage.style.display = 'none';
            }
        }, 3000); // 3000 milisegundos = 3 segundos
    </script>

    @using (Html.BeginForm("Login", "Access", FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group icon-input">
            <i class="fas fa-user"></i>
            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", placeholder = "Username", required = "required" })
        </div>
        <div class="form-group icon-input">
            <i class="fas fa-lock"></i>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
        </div>
        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
    }
</div>

